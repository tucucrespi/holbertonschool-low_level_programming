#include "holberton.h"

/**
 * print_line - print the sum of two integer.
 * print numbers 0 to 9
 * @n: prints the lines
 * Return: result int.
 */

void print_diagonal(int n)
{
int x;
int y;

if (n > 0)
{
for (x = 0; x <= n; x++)
{
for (y = 0; y <= x; y++)
{
_putchar (' ');
_putchar ('\\');
_putchar ('\n');
}
else
_putchar ('\n');
}
}
